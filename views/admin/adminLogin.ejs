<!DOCTYPE html>
<html>
<head>
    <title>Admin Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .login-container {
            width: 350px;
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group input {
            width: 85%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group label {
            text-align: left;
            display: block;
            margin-bottom: 5px;
        }

        .btn-container {
            margin-top: 20px;
        }

        .btn {
            padding: 10px 30px;
            background-color:black;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-secondary {
            background-color:black;
            padding-top: 10px;
            position: relative;
            top: 10px;
        }
     

    </style>
</head>
<body>
<div class="login-container">
    <h2>Admin Login</h2>
    <form action="/admin/login" method="post">
    <div class="form-group">
        <label for="email" style="font-size: medium, Times, serif;font-weight:500;color:gray">Email:</label>
        <input type="email" id="email" name="email" required style="border-radius: 30px; padding: 10px; border: 1px solid #7c7979;padding: 15px;">
  
    </div>
    <div class="form-group" style="font-size: medium, Times, serif;font-weight:500;color:gray">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required style="border-radius: 30px; padding: 10px; border: 1px solid #7c7979;padding: 15px">
 
    </div>
    
    <div class="btn-container">
        <button type="submit" class="btn" id="login" style="font-weight: bold;border: 2px solid gray;">Login</button>
    </div>
    </form>
     <!--error messages-->
     <% if (typeof message !="undefined" ) {%>

        <p class="mt-3 text-info ">
            <%= message %>
        </p>

        <%} %>
            <!--end messages-->
    
</div>
</body>

</html>